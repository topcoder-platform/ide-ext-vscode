{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "no-string-throw": true,
    "no-unused-expression": true,
    "no-duplicate-variable": true,
    "curly": true,
    "class-name": true,
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": false,
    "quotemark": [
      true,
      "single"
    ],
    "public-before-private": false,
    "static-before-instance": false,
    "no-console": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "indent": [
      true,
      "spaces",
      2
    ],
    "triple-equals": true
  },
  "defaultSeverity": "error"
}
